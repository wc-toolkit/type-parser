{
  "name": "@wc-toolkit/cem-utilities",
  "version": "1.0.0",
  "description": "A set of tools for retrieving and transforming data from the Custom Elements Manifest",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "index.js",
    "index.d.ts",
    "/dist"
  ],
  "scripts": {
    "changeset": "changeset add",
    "build": "tsup src/index.ts --dts --format cjs,esm",
    "clean": "git clean -fdX",
    "deploy": "npm run build && npm publish",
    "format": "prettier . --write",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "test": "vitest --run",
    "prepare": "husky",
    "release": "pnpm run build && changeset publish"
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wc-toolkit/cem-utilities.git"
  },
  "bugs": {
    "url": "https://github.com/wc-toolkit/cem-utilities/issues"
  },
  "homepage": "https://wc-toolkit.com/cem-utilities/overview",
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@eslint/js": "^9.19.0",
    "custom-elements-manifest": "2.1.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "husky": "^9.1.7",
    "prettier": "3.4.2",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "vitest": "^3.0.4"
  },
  "keywords": [
    "custom-elements",
    "custom-elements-manifest",
    "web-components",
    "components",
    "cem"
  ],
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.--write": "prettier --write"
  }
}
